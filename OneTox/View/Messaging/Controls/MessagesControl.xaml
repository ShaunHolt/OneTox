<UserControl x:Class="OneTox.View.Messaging.Controls.MessagesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:OneTox.View.Messaging.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d"
             DataContext="{Binding Source={StaticResource ViewModelLocator},
                                   Path=FriendList.SelectedFriend.Conversation.MessageGroups}"
             SizeChanged="MessagesControlSizeChanged">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Canvas x:Name="BubbleRects"/>
            <RichTextBlock x:Name="Messages"/>
        </Grid>
    </ScrollViewer>
</UserControl>
